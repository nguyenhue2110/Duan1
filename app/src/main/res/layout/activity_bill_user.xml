<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activityuser.BillUserActivity">

<ImageView
    android:id="@+id/imgvien"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="-46dp"
    android:layout_marginTop="-75dp"
    android:contentDescription="TODO"
    android:src="@drawable/logo"></ImageView>
<ImageView
    android:id="@+id/imgbackbillus"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/back"
    android:layout_marginTop="15dp"></ImageView>

<TextView
    android:id="@+id/hoadondmus"
    android:text="Hóa Đơn Đã Mua"
    android:textSize="25dp"
    android:textStyle="bold"
    android:layout_marginLeft="20dp"
    android:textColor="#6B5656"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/imgbackbillus"
    android:layout_marginTop="50dp"

    ></TextView>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recyclerbillus"
    android:layout_below="@id/hoadondmus"
    android:layout_marginBottom="50dp"
    android:layout_marginTop="15dp">

</androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>